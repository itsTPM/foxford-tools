{
  "manifest_version": 3,
  "name": "Foxford Tools",
  "description": "Расширение для того самого сайта Фокса",
  "version": "1.0",
  "version_name": "1.0-preview",
  "action": {
    "default_popup": "index.html",
    "default_icon": "./assets/images/round.png"
  },
  "content_scripts": [
    {
      "js": [
        "./assets/js/content.js"
      ],
      "css": [
        "./assets/css/content.css"
      ],
      "matches": [
        "https://foxford.ru/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ]
}